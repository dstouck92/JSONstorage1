{
  "name": "herd",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"tsx server/index.ts\" \"vite --config vite.config.ts\"",
    "dev:server": "tsx server/index.ts",
    "dev:client": "vite --config vite.config.ts",
    "build": "vite build && esbuild server/index.ts --bundle --platform=node --outfile=dist/server/index.js --format=esm --packages=external",
    "start": "NODE_ENV=production node dist/server/index.js"
  },
  "dependencies": {
    "@spotify/web-api-ts-sdk": "^1.2.0",
    "concurrently": "^9.2.1",
    "cors": "^2.8.5",
    "drizzle-orm": "^0.31.0",
    "esbuild": "^0.27.2",
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.11.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "@types/react": "^18.2.42",
    "@types/react-dom": "^18.2.17",
    "@types/uuid": "^9.0.7",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "drizzle-kit": "^0.22.0",
    "postcss": "^8.4.32",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.0",
    "tailwindcss": "^3.3.6",
    "tsx": "^4.6.2",
    "typescript": "^5.3.2",
    "vite": "^5.0.7"
  }
}
